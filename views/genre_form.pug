extends layout

block content
    h1 #{title}

    // note: action='' means it'll send the result to the same URL as we're on
    form(method='POST' action='')
        div.form-group
            label(for='name') Genre:
            // If it's GET, genre is undefined, so blank. If it's POST, we reuse it (see end of this line)
            input#name.form-control(type='text', placeholder='Fantasy, Poetry, etc.', name='name', value=(undefined===genre ? '' : genre.name))
        button.btn.btn-primary(type='submit') Submit
    
    if errors
        ul
            for error in errors
                li!= error.msg

